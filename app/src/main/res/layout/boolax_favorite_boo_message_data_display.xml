<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_0_left"
    android:layout_height="wrap_content"
    android:background="#efefef"
    android:padding="5dp"
    tools:elevation="@dimen/bar_action_item_padding_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:weightSum="100"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/boolax_boo_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:elevation="@dimen/aar_bubble_size"
                android:scaleType="centerCrop"
                android:src="@mipmap/mage"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:id="@+id/theNoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="-60dp"

                android:layout_weight="100"
                android:orientation="vertical"
                android:background="@drawable/boolax_row_backg_media"

                android:padding="14dp"
                android:paddingLeft="36dp"
                tools:elevation="@dimen/action_button_padding">

                <TextView
                    android:id="@+id/boolax_boo_message_actual_txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:layout_weight="25"
                    android:inputType="textMultiLine"
                    android:text="fsifh8s dggdg  "
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/boolax77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boolax_row_backg_media"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear7ayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/ic_pause_circle_outline_black_24dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="10"
                            android:src="@drawable/ic_pause_circle_outline_black_24dp" />

                        <ImageView
                            android:id="@+id/boolax_boo_message_audio_play_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="10"
                            android:src="@drawable/ic_play_arrow_black_24dp" />

                        <SeekBar
                            android:id="@+id/boolax_boo_message_seekbar"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_weight="60"
                            android:background="#fff"
                            tools:backgroundTint="@color/blue_btn_bg_color" />

                        <TextView
                            android:id="@+id/boolax_boo_message_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:25"
                            android:textColor="#fff"
                            android:visibility="invisible"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/boolax_boo_message_time_tot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:visibility="invisible"
                            android:text="---12:25"
                            android:textColor="#fff"
                            android:textSize="8dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/boolax_boo_message_audio_caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, mehn!"
                            android:textColor="#fff"
                            android:textSize="23dp" />

                        <LinearLayout
                            android:id="@+id/theimagepreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boolax_row_backg_media"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <ImageView
                                android:id="@+id/boolax_boo_message_image"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/avatar" />

                            <TextView
                                android:id="@+id/boolax_boo_message_image_caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi, mehn!"
                                android:textColor="#fff"
                                android:textSize="23dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:paddingLeft="100dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/boolax_boo_message_rec_time"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="12:25 am"
                                    android:textColor="#fff"
                                    android:textSize="8dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/boolax_boo_message_delivered"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="10"
                                        android:src="@drawable/ic_done_all" />

                                    <ImageView
                                        android:id="@+id/boolax_boo_message_sent"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_weight="10"
                                        android:src="@drawable/ic_done" />

                                    <ImageView
                                        android:id="@+id/boolax_boo_message_not_sent"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_weight="10"
                                        android:src="@drawable/ic_sms_failed_black_24dp" />

                                    <ImageView
                                        android:id="@+id/boolax_boo_message_seen"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_weight="10"
                                        android:src="@drawable/ic_done_all_black_24dp_on" />

                                    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                                        android:id="@+id/progress_2"
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:visibility="gone"
                                        app:rcBackgroundPadding="10dp"
                                        app:rcIconPadding="5dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/boo_add_stream"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_weight="15"
            android:text="TextView"
            android:visibility="invisible" />
    </LinearLayout>


</ScrollView>