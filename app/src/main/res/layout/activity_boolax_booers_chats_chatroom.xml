<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boolax_boos_chat_rooms_chat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context="com.ogeniuspriority.boolax.boolax.boolax_booers_chats_chatroom">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context="com.ogeniuspriority.boolax.boolax.boolax_booers_chats_chatroom">


        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#F72A21"
            android:elevation="8dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="56dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="80"
                    android:text="Olga Neza"
                    android:textColor="#fff"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_weight="10"
                    android:src="@drawable/ic_more_vert_black_24dp" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="97"
            android:orientation="vertical"
            android:weightSum="95">


            <ListView
                android:id="@+id/boolax_boos_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:clickable="true"
                android:dividerHeight="0dp"/>

            <ScrollView
                android:id="@+id/theScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/werrrrr"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="10"
                    android:background="#cdcdcd"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/ic_camera_alt_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_camera_alt_black_24dp" />

                    <ImageView
                        android:id="@+id/ic_insert_emoticon_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_insert_emoticon_black_24dp" />


                    <com.vanniktech.emoji.EmojiEditText
                        android:id="@+id/comment_2017_send_data"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="70"
                        android:background="#fff"
                        android:enabled="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:hint="Message"
                        android:imeOptions="actionSend"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"

                        android:maxLines="6"
                        android:minLines="6"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />


                    <ImageView
                        android:id="@+id/comment_send_2017"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_send_black_24dp" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
