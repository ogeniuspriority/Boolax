<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/boolax_row_backg_media"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_weight="60"
            android:background="#fff"
            tools:backgroundTint="@color/blue_btn_bg_color" />

        <TextView
            android:id="@+id/boo_i_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:25"
            android:textColor="#fff"
            android:textSize="23dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boo_ima_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, mehn!"
            android:textColor="#fff"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/boo_i_cion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12:25 am"
                    android:textColor="#fff"
                    android:textSize="23dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagew6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_done_all" />

                    <ImageView
                        android:id="@+id/imag6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_done" />

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:src="@drawable/ic_sms_failed_black_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/boo_add_stream"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_weight="15"
        android:text="TextView"
        android:visibility="invisible" />


</LinearLayout>