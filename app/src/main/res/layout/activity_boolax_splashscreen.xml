<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mage"
    tools:context="com.ogeniuspriority.boolax.boolax.Boolax_splashscreen">


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:background="#A1B71C1C"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/app_logo" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="BOOLAX"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Join Boolax, find your love and the most fun with your friends, be connected with people and events near you.     "
            android:textColor="#fff"
            android:textSize="18sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/Boolax_normal_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Log in"
            android:textColorHint="#cdcdcd"
            android:textSize="20dp"
            app:fb_borderColor="#8f1f15"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/com_smart_login_code"
            app:fb_focusColor="#F08883"
            app:fb_iconPosition="left"
            app:fb_radius="3dp"
            app:fb_text="LET'S GET STARTED"
            app:fb_textColor="#FFFFFF" />



    </LinearLayout>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#fff"
        android:text="@string/copyright" />


</RelativeLayout>
