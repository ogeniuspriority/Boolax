<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#efefef">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boolax_row_backg"
        android:orientation="horizontal"
        android:weightSum="90"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/linearLut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_image_capture_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_camera_black_24dp" />


            <TextView
                android:id="@+id/boolax_image_capture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="capture"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaLut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_voice_record_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_keyboard_voice_black_24dp" />


            <TextView
                android:id="@+id/boolax_voice_record"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="Record"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linaLut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_video_record_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_videocam_black_24dp" />


            <TextView
                android:id="@+id/boolax_video_record"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="Film"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liarLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boolax_row_backg"
        android:orientation="horizontal"
        android:weightSum="90"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/inearLut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_image_choose_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_image_black_24dp" />


            <TextView
                android:id="@+id/boolax_image_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="Image"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaLt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_voice_choose_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_audiotrack_black_24dp" />


            <TextView
                android:id="@+id/boolax_voice_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="Audio"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linaLt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boolax_video_choose_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="13"
                android:src="@drawable/ic_ondemand_video_black_24dp" />


            <TextView
                android:id="@+id/boolax_video_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                android:text="Video"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>