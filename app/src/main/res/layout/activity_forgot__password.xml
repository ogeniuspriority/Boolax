<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.ogeniuspriority.boolax.boolax.Forgot_Password">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context="com.ogeniuspriority.boolax.boolax.Forgot_Password">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Recover my password"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texdd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Use Email"
                    android:textSize="20sp" />

                <com.libizo.CustomEditText
                    android:id="@+id/EmailOrPhoneField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="22dp"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="#fff"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    tools:layout_margin="2dp" />

                <Button
                    android:id="@+id/use_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request Code to email" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texgggdd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Use My Phone Number"
                    android:textSize="20sp" />

                <com.libizo.CustomEditText
                    android:id="@+id/PhoneField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="250726098215"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="22dp"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="#fff"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    tools:layout_margin="2dp" />

                <Button
                    android:id="@+id/use_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request password using phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teggdd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Put code here"
                    android:textSize="20sp" />

                <com.libizo.CustomEditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="***"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="22dp"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="#fff"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    tools:layout_margin="2dp" />
                <TextView
                    android:id="@+id/tegdd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Repeat code here"
                    android:textSize="20sp" />

                <com.libizo.CustomEditText
                    android:id="@+id/password_retype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="***"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="22dp"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBackgroundColor="#fff"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    tools:layout_margin="2dp" />

                <Button
                    android:id="@+id/check_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approve password" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
