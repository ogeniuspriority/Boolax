<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/boo_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Olga NEZA"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/boo_residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Kigali, Kicukiro" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/boo_interested_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Interested in"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/boo_interested_in_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="Kigali, Kicukiro" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="150">

            <TextView
                android:id="@+id/boo_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Height"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/boo_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Weight"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/boo_skin_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Skin color"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="150">

            <TextView
                android:id="@+id/boo_height_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="1.5~1.7 m" />

            <TextView
                android:id="@+id/boo_weight_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="60~70 kgs" />

            <TextView
                android:id="@+id/boo_skin_color_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="Black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="150">

            <TextView
                android:id="@+id/boo_religion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="Religion"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/boo_profession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="Academics and Work"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/boo_education_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="Lover Criteria"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="150">

            <TextView
                android:id="@+id/boo_religion_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="not filled" />

            <TextView
                android:id="@+id/boo_profession_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="not filled" />

            <TextView
                android:id="@+id/boo_lover_criteriadata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="8dp"
                android:text="not filled" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/boo_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="About relationships"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/boo_about_relationships_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="faithful, mature etc.." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearyout8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/bo_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="How attractive do you feel?!"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/boo_how_attractive_you_feel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="faithful, mature etc.." />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayo8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/boobout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="About love"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/boo_about_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="faithful, mature etc.." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/boobou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="About Hobbies"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/boo_about_hobbies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="faithful, mature etc.." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineaoorLayo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/boobooou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="About life"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/boo_about_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="faithful, mature etc.." />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="150">

            <ImageView
                android:id="@+id/boo_avatar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/placeholder" />

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="100">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/boo_pass_on"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/passwordField"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="50"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="17dp"
                    app:fb_defaultColor="@android:color/transparent"
                    app:fb_focusColor="#F08883"
                    app:fb_iconPosition="left"
                    app:fb_radius="3dp"
                    app:fb_text="PASS ON"
                    app:fb_textColor="#FF3342" />


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/boo_like"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/passwordField"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="50"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#cdcdcd"
                    android:textSize="17dp"
                    app:fb_defaultColor="@android:color/transparent"
                    app:fb_focusColor="#F08883"
                    app:fb_iconPosition="left"
                    app:fb_radius="3dp"
                    app:fb_text="LIKE"
                    app:fb_textColor="#33BBFF" />

            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/boo_say_request_sen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColorHint="#cdcdcd"
                android:textSize="17dp"
                app:fb_defaultColor="#33BBFF"
                app:fb_focusColor="#F08883"
                android:visibility="invisible"
                app:fb_iconPosition="left"
                app:fb_radius="3dp"
                app:fb_text="Request sent"
                app:fb_textColor="#ffffff" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>